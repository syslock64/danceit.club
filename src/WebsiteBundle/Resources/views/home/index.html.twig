                    <div class="input-field col s12">
                        <input id="username" type="text" class="validate">
                        <label for="username">Usuario</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate">
                        <label for="password">Clave</label>
                    </div>
                    <div class="col s12">
                        <input id="imRegistered" type="checkbox" value="ok">
                        <label for="imRegistered">Ya estoy registrado</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <button class="btn" type="submit"><i class="material-icons right">send</i>Acceder</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
